pipeline {
  agent none
  stages {
    stage('prepare') {
      agent any
      steps {
          sh 'cp requirements.txt .jenkins/'
      }
    }
    stage('build') {
      agent {
        dockerfile {
          filename '.jenkins/Dockerfile.build'
        }
      }
      steps {
        sh 'mypy ampel --junit-xml mypy.xml'
      }
      post {
        always {
          junit 'mypy.xml'
        }
      }
    }
  }
}