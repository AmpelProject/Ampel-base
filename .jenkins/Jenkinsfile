pipeline {
  agent { docker { image 'cytopia/mypy:latest' } }
  stages {
    stage('build') {
      steps {
        sh '#!/bin/sh\n pip install -r requirements.txt'
      }
    }
    stage('test') {
      steps {
        sh '#!/bin/sh\n mypy ampel --junit-xml mypy.xml'
      }
      post {
        always {
          junit 'mypy.xml'
        }
      }
    }
  }
}